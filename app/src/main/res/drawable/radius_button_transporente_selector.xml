<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:drawable="@drawable/radius_button_transporente_pressed" android:state_pressed="true"/>

    <!-- Estado cuando el botón está enfocado (usado en Android TV y navegación con teclado) -->
    <item android:drawable="@drawable/radius_button_focus" android:state_focused="true"/>

    <!-- Estado cuando el botón está deshabilitado -->
    <item android:drawable="@drawable/radius_button_transporente_pressed" android:state_enabled="false"/>

    <!-- Estado normal del botón -->
    <item android:drawable="@drawable/radius_button_transporente"/>
</selector>
